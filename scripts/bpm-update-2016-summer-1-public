install_pyqtgraph(){
    # First, upgrade pyqt and dependencies.
    sudo -u ubuntu /home/ubuntu/miniconda3/bin/conda install --yes pyqt
    sudo -u ubuntu /home/ubuntu/miniconda3/bin/conda install --yes pyqtgraph
    res=`grep PYQTGRAPH_QT_LIB /home/ubuntu/.bashrc`
    if [[ $res != "export PYQTGRAPH_QT_LIB=PyQt5" ]]; then
        cat >> /home/ubuntu/.bashrc << EOF

# BPM: Added by bpm-update for pyqtgraph.
export PYQTGRAPH_QT_LIB=PyQt5

EOF
        echo 'pyqtgraph installed. Restart login session to finish.'
    fi
}

install_opensesame(){
    # Install 3.1 from CogSci channel. The .deb includes Python 2.7, and
    # installing via conda means OpenSesame will use Python 3.
    # As of 20190109 the conda OpenSesame requires Python 3.5, which prevents
    # upgrades to Python > 3.5. We'll create a conda environment from which
    # OpenSesame can run.
    msg="Installing OpenSesame package."
    echo $msg
    sudo -i -u ubuntu conda install --channel cogsci --name py35 python-opensesame pillow --yes
    msg="Installing OpenSesame in menu."
    echo $msg
    FNAME1=OpenSesame.py35.desktop
    # Add OpenSesame launcher to the Applications menu
    wget --quiet --output-document="/home/ubuntu/.local/share/applications/$FNAME1" https://raw.githubusercontent.com/rsprouse/bpm-bce/master/resources/$FNAME1 && \
    chmod 0644 /home/ubuntu/.local/share/applications/$FNAME1 && \
    echo DONE: $msg || echo FAIL: $msg
    sudo -i -u ubuntu -H ln -s /home/ubuntu/miniconda3/envs/py35/bin/opensesame /home/ubuntu/bin
    install_media_player_gst
    install_mousetrap
}

