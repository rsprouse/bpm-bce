    echo $msg
    sudo -i -u ubuntu -H conda install --yes jupyterlab=0.35.3 nodejs=10.13.0 && \
    echo DONE: $msg || echo FAIL: $msg
    msg="Installing jupyterlab-variableInspector."
    echo $msg
    REPO=jupyterlab-variableInspector
    sudo -i -u ubuntu -H bash << EOF
cd /home/ubuntu/src
git clone https://github.com/lckr/$REPO
cd $REPO
npm install --save-dev webpack
jupyter lab clean
npm install
npm run build
jupyter labextension install .
jupyter lab build
jupyter lab clean
EOF
    cd /home/ubuntu/src
    rm -rf $REPO
    cd $ORIGDIR
}

