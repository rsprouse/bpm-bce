    msg="Removing pycharm."
    echo $msg
    rm -f /usr/share/applications/jetbrains-pycharm-ce.desktop && \
    rm -rf /opt/pycharm-edu-2.0.4 && \
    echo DONE: $msg || echo FAIL: $msg
}

