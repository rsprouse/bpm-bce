# Update the conda script.
create_conda_envs(){
    msg="Creating conda environments."
    echo $msg
    sudo -i -u ubuntu -H bash << EOF
conda install conda=4.3.30 --yes  # We need to update conda this far to enable the next update.python
conda install conda=4.5.11 --yes
conda remove numpy cython matplotlib pandas scipy audioread librosa pymongo --yes
conda install python=3.7.2 conda=4.5.12 cryptography=2.4.2 virtualenv=16.0.0 pyyaml=3.13 pip=18.1 setuptools=40.6.3 cffi=1.11.5 pillow=5.4.1 w3lib=1.19.0 nltk=3.4 openssl=1.1.1a ipython=7.2.0 cssselect=1.0.3 anaconda-client=1.7.2 lxml=4.3.0 sqlite=3.26.0 zope.interface=4.6.0 jsonschema=2.6.0 queuelib=1.5.0 --yes
# numpy from the conda-forge channels depends on openblas instead of the much-larger mkl
conda install --channel conda-forge numpy=1.16.0 --yes
conda install cython=0.29.2 pandas=0.23.4 scipy=1.1.0 pyqtgraph=0.10.0 --yes
EOF
    sudo -i -u ubuntu -H bash << EOF
conda create --name py35 python=3.5.1 --yes
EOF
    echo DONE: $msg
    cd /home/ubuntu/.local/share/applications
    mv ipython3.5.desktop ipython3.7.desktop
    perl -pi -e 's/5/7/g' ipython3.7.desktop
    mv python3.5.desktop python3.7.desktop
    perl -pi -e 's/5/7/g' python3.7.desktop
    cd $ORIGDIR
#    sudo -i -u ubuntu -H bash << EOF
#conda create --name py37 --clone root --yes
#conda clean -tp --yes
#EOF
#    dest=/home/ubuntu/.bashrc
#    if grep -q -e '^source activate' $dest; then
#        echo "conda environment activation already found in .bashrc."
#    else
#        msg="Updating .bashrc with conda environment."
#	echo $msg
#        echo "" >> $dest && \
#        echo "# BPM-BCE: Added by bpm-update" >> $dest && \
#        echo "source activate py37" >>$dest && \
#        echo DONE: $msg || echo FAIL: $msg
#    fi
}

fix_opensesame(){
    echo Installing pyqt in py35 environment.
    sudo -i -u ubuntu conda install --channel cogsci --name py35 python-opensesame=3.1.9 --yes
    echo Installing pyaudio and pygame in py35 environment.
    sudo -i -u ubuntu -H bash << EOF
source activate py35
pip install QScintilla
pip install pyaudio
pip install pygame
pip uninstall -y PyQt5
source deactivate
EOF
}

